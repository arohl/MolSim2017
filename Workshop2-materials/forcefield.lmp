##############################################################################################
#### Atoms types - mass - charge
##############################################################################################
#@ 1 atom types

variable Ar   equal 1

##############################################################################################
#### Atom masses
##############################################################################################

mass ${Ar}     40.0

##############################################################################################
#### Atom charges not set in lammps input
##############################################################################################

set type ${Ar}  charge     0.0

##############################################################################################
# Pair potentials
##############################################################################################

pair_style lj/cut 15.
pair_modify tail yes

# J. Chem. Phys. 111, 9352 (1999); http://dx.doi.org/10.1063/1.479848
pair_coeff  ${Ar}    ${Ar}     0.010323     3.405000
